<div class="carousel-container" style="max-height: @($"{MaxPixelHeight}px");">
    <img src="@_images[_index].Url" class="@_imageCSS" onload="this.classList.remove('fade'); this.offsetWidth; this.classList.add('fade');" alt="@_images[_index].Alt" style="max-height: @($"{MaxPixelHeight}px");"/>
    <i class="fa-solid fa-angle-left fa-5x move-previous" @onclick="MovePrevious"/>
    <i class="fa-solid fa-angle-right fa-5x move-next" @onclick="MoveNext"/>

    <div class="circle-container">
        @foreach (CarouselImage image in _images)
        {
            <i class="fa-solid fa-circle@(image == _images[_index] ? " selected" : null)" @onclick="() => _index = Array.IndexOf(_images, image)"/>
        }
    </div>
</div>