{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2015",
    "outDir": "wwwroot/javascript",
    "rootDir": "./"
  },
  "include": [
    "TypeScript/**/*",
    "TypeScript/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
